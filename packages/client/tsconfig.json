{
  "compilerOptions": {
    "strict": true,
    "incremental": true,
    "outDir": "dist/esm",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "esnext",
    "skipLibCheck": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true
  },
  "references": [{ "path": "../universal" }],
  "exclude": ["node_modules", "dist", "vitest.config.ts", "**/*.test.ts"]
}
